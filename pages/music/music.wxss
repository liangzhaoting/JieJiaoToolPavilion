/* pages/music/music.wxss */
.container{
  width: 100vw;
  padding: 0;
  margin: 0;
  padding-bottom: 20px;
}
.swiperList{
  width: 100%;
  height: 25vh;
  background: #fff;
  box-shadow: 0px 0px 6px  0px #888888;
}
.swiperList .swiper-item{
  width: 100%;
  height: 100%;
}
.swiperList .swiper-item image{
  width: 100%;
  height: calc(100% - 45px);
  object-fit:cover;
  margin: 0;
  padding: 0;
}
.swiper-item-msg{
  width: 100%;
  display: block;
  font-size: 12px;
  text-align: center;
  color: #000;
  padding: 0;
  margin: 0;
}

.musicList{
  width: 90%;
  margin-top: 10px;
}
.musicList-title{
  font-size: 18px;
  border-bottom: 2px solid #d0b3a9;
}
.musicList-title text{
  font-size: 12px;
  color: #666666;
  float: right;
}
.musicList-li{
  width: 100%;
  height: 35px;
  font-size: 14px;
  line-height: 35px;
  border: 1px solid #d9d9d9;
  border-top: none;
  display: flex;
}
.musicList-li:nth-child(2n-1) {
  background-color: #f7f7f7;
}
.musicList-li-index{
  width: 35px;
  height: 35px;
  text-align: center;
}
.musicList-li-name{
  width: calc(100% - 35px - 90px);
  height: 35px;
  padding-left: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}
.musicList-li-artistsname{
  width: 90px;
  float: right;
  padding: 0 5px;
  height: 35px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.thead .musicList-li-index{
  border-right: 1px solid #d9d9d9;
}
.thead .musicList-li-artistsname{
  border-left: 1px solid #d9d9d9;
}